@tailwind base;
@tailwind components;
@tailwind utilities;

* {
    -moz-user-select: none;
    -webkit-user-select: none;
    -ms-user-select: none;
    user-select: none;
}

/* font: Dank Mono | all rights reserved */
@font-face {
  font-family: 'Dank Mono';
  src: url('@/assets/fonts/Dank-Mono.ttf');
}

/* font: LXGW Wenkai | https://github.com/lxgw/LxgwWenKai */
@font-face {
  font-family: 'LXGW WenKai';
  src: url('@/assets/fonts/LXGWWenKaiMono-Regular.ttf');
  font-weight: normal;
}
@font-face {
  font-family: 'LXGW WenKai';
  src: url('@/assets/fonts/LXGWWenKaiMono-Bold.ttf');
  font-weight: bold;
}

/* font: LXGW XiHei | https://github.com/lxgw/LxgwNeoXiHei */
@font-face {
  font-family: 'LXGW XiHei';
  src: url('@/assets/fonts/LxgwNeoXiHei.ttf');
  font-weight: normal;
}
